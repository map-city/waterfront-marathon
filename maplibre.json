{
	"version": 8,
	"name": "osm",
	"metadata": {
		"maputnik:renderer": "mbgljs"
	},
    "glyphs": "assets/fonts/{fontstack}/{range}.pbf",
    "sprite": "https://mapcity.io/waterfront-marathon/assets/sprites/sprites",
	"sources": {
		"osm": {
			"type": "vector",
			"url": "https://vector.openstreetmap.org/shortbread_v1/tilejson.json"
		}
	},
	"layers": [
		{
			"id": "background",
			"type": "background",
			"paint": {
				"background-color": "hsl(0, 0%, 93%)"
			}
		},
		{
			"source": "osm",
			"id": "land-natural",
			"type": "fill",
			"source-layer": "land",
			"filter": [ "in", "kind", "brownfield", "farmland", "farmyard", "greenfield", "greenhouse_horticulture", "orchard", "plant_nursery", "vineyard", "park", "village_green", "recreation_ground", "allotments", "garden", "miniature_golf", "playground", "golf_course", "forest", "grass", "grassland", "meadow", "wet_meadow", "heath", "scrub", "beach", "sand", "bog", "marsh", "string_bog", "swamp" ],
			"paint": {
			  "fill-color": "hsl(0, 0%, 93%)",
			  "fill-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 14, 0, 15, 1 ]
			},
			"minzoom": 14
		},
		{
			"source": "osm",
			"id": "water",
			"type": "fill",
			"source-layer": "water_polygons",
			"filter": [ "in", "kind", "water", "river", "reservoir", "basin", "dock" ],
			"paint": {
				"fill-color": "hsl(186, 46%, 58%)"
			}
		},
		{
			"source": "osm",
			"id": "waterway",
			"type": "line",
			"source-layer": "water_lines",
			"filter": [ "all", [ "in", "kind", "river", "canal", "stream", "ditch" ], [ "!=", "tunnel", true ], [ "!=", "bridge", true ] ],
			"paint": {
				"line-color": "hsl(186, 46%, 58%)",
				"line-width": 1
			}
		},
        {
			"source": "osm",
			"id": "building",
			"type": "fill",
			"source-layer": "buildings",
			"paint": {
				"fill-color": "hsl(0, 0%, 89%)",
				"fill-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 14, 0, 15, 1 ]
			},
            "minzoom": 14
		},
		{
			"id": "ferry",
			"type": "line",
			"source": "osm",
			"source-layer": "ferries",
			"paint": {
			  "line-color": "hsl(200, 100%, 60%)",
			  "line-dasharray": [2, 2],
			  "line-width": 1
			}
		},	  
		{
			"source": "osm",
			"id": "airport-taxiway",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "taxiway" ],
			"paint": {
				"line-color": "hsl(0, 0%, 93%)",
				"line-width": { "stops": [ [ 13, 0 ], [ 14, 1 ], [ 15, 8 ], [ 16, 12 ], [ 18, 18 ], [ 20, 36 ] ] },
				"line-opacity": { "stops": [ [ 13, 0 ], [ 14, 1 ] ] }
			},
			"layout": {
				"line-join": "round"
			}
		},
		{
			"source": "osm",
			"id": "airport-area",
			"type": "fill",
			"source-layer": "street_polygons",
			"filter": [ "in", "kind", "runway", "taxiway" ],
			"paint": {
				"fill-color": "hsl(0, 0%, 93%)",
				"fill-opacity": { "stops": [ [ 11, 0 ], [ 12, 1 ] ] }
			}
		},
		{
			"source": "osm",
			"id": "highway-service",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "all", [ "in", "kind", "service" ], [ "!=", "bridge", true ], [ "!=", "tunnel", true ] ],
			"paint": {
				"line-color": "hsl(0, 0%, 83%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 20, 30 ],
				"line-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 15, 0, 16, 1 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			},
			"minzoom": 15
		},
		{
			"source": "osm",
			"id": "highway-minor",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "unclassified", "residential", "living_street" ],
			"paint": {
				"line-color": "hsl(0, 0%, 83%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 20, 92 ],
				"line-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 14, 0, 15, 1 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			},
			"minzoom": 14
		},
		{
			"source": "osm",
			"id": "highway-major",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "motorway", "trunk", "primary", "secondary", "tertiary" ],
			"paint": {
				"line-color": "hsl(0, 0%, 83%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 20, 152 ],
				"line-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 11, 0, 12, 1 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			},
			"minzoom": 11
		},
        {
			"source": "osm",
			"id": "railway-outline",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "all", [ "in", "kind", "rail" ], [ "!=", "bridge", true ], [ "!=", "tunnel", true ] ],
			"paint": {
				"line-color": "hsl(0, 0%, 93%)",
				"line-width": { "stops": [ [ 8, 1 ], [ 13, 1 ], [ 15, 3 ], [ 16, 4 ], [ 18, 8 ], [ 19, 11 ], [ 20, 14 ] ] },
				"line-opacity": { "stops": [ [ 14, 0 ], [ 15, 1 ] ] }
			}
		},
		{
			"source": "osm",
			"id": "railway",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "all", [ "in", "kind", "rail" ], [ "!=", "bridge", true ], [ "!=", "tunnel", true ] ],
			"paint": {
				"line-color": "hsl(240, 2%, 71%)",
				"line-width": { "stops": [ [ 8, 1 ], [ 13, 1 ], [ 15, 2 ], [ 16, 3 ], [ 18, 6 ], [ 19, 8 ], [ 20, 10 ] ] },
				"line-dasharray": [ 2, 2 ],
				"line-opacity": { "stops": [ [ 14, 0 ], [ 15, 1 ] ] }
			}
		},	  
		{
			"source": "osm",
			"id": "highway-name-minor",
			"type": "symbol",
			"source-layer": "street_labels",
			"filter": [ "in", "kind", "unclassified", "residential", "living_street" ],
			"layout": {
				"text-field": "{name}",
				"text-transform": "uppercase",
				"text-rotation-alignment": "map",
				"text-font": [ "montserrat-semibold" ],
				"text-letter-spacing": 0.2,
				"symbol-placement": "line",
				"symbol-spacing": 250,
				"text-anchor": "center",
				"text-size": [ "interpolate", [ "exponential", 1.5 ], [ "zoom" ], 10, 0, 20, 25 ]
			},
			"paint": {
				"text-color": "hsl(0, 0%, 40%)",
				"text-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 14, 0, 16, 1 ]
			},
			"minzoom": 14
		},
		{
			"source": "osm",
			"id": "highway-name-major",
			"type": "symbol",
			"source-layer": "street_labels",
			"filter": [ "in", "kind", "motorway", "trunk", "primary", "secondary", "tertiary" ],
			"layout": {
				"text-field": "{name}",
				"text-transform": "uppercase",
				"text-rotation-alignment": "map",
				"text-font": [ "montserrat-semibold" ],
				"text-letter-spacing": 0.2,
				"symbol-placement": "line",
				"symbol-spacing": 250,
				"text-anchor": "center",
				"text-size": [ "interpolate", [ "exponential", 1.5 ], [ "zoom" ], 10, 0, 20, 30 ]
			},
			"paint": {
				"text-color": "hsl(0, 0%, 40%)",
				"text-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 14, 0, 16, 1 ]
			},
			"minzoom": 14
		},
		{
			"source": "osm",
			"id": "symbol-transit",
			"type": "symbol",
			"source-layer": "public_transport",
			"filter": [ "in", "kind", "tram_stop", "light_rail" ],
			"layout": {
				"text-field": "{name}",
				"icon-size": 0.4,
				"symbol-placement": "point",
				"text-font": [ "montserrat-semibold" ],
				"text-size": 10,
				"icon-anchor": "bottom",
				"text-anchor": "top",
				"icon-image": "icon-bus",
				"icon-allow-overlap": false,
				"text-allow-overlap": false,
				"icon-ignore-placement": false,
				"text-ignore-placement": false
			},
			"paint": {
				"icon-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 15, 0, 16, 1 ],
				"text-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 15, 0, 16, 1 ],
				"icon-color": "hsl(0, 0%, 40%)",
				"text-color": "hsl(0, 0%, 40%)",
				"text-halo-color": "hsl(0, 0%, 100%)",
				"text-halo-width": 0,
				"text-halo-blur": 0
			},
			"minzoom": 15
		},
		{
			"source": "osm",
			"id": "symbol-transit-subway",
			"type": "symbol",
			"source-layer": "public_transport",
			"filter": [ "in", "kind", "station" ],
			"layout": {
				"text-field": "{name}",
				"icon-size": 0.8,
				"symbol-placement": "point",
				"text-font": [ "montserrat-semibold" ],
				"text-size": 10,
				"icon-anchor": "bottom",
				"text-anchor": "top",
				"icon-image": "icon-rail_metro",
				"icon-allow-overlap": true,
				"text-allow-overlap": true,
				"icon-ignore-placement": false,
				"text-ignore-placement": false
			},
			"paint": {
				"icon-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 15, 0, 16, 1 ],
				"text-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 15, 0, 16, 1 ],
				"icon-color": "hsl(0, 0%, 40%)",
				"text-color": "hsl(0, 0%, 40%)",
				"text-halo-color": "hsl(0, 0%, 100%)",
				"text-halo-width": 0,
				"text-halo-blur": 0
			},
			"minzoom": 15
		}
	]
}